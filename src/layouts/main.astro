---
import Header from "@/components/react/Header";
const { title } = Astro.props;

const currentUrl = Astro.url.pathname;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title} | Prasu Labs - Community-Driven Open Source Projects</title>
    <meta
      name="description"
      content="Prasu Labs is an unregistered organization dedicated to creating open-source software, community-driven solutions, and impactful web projects. Discover projects like Jeevan Daan and Lekhak, and learn how you can contribute to the future of open source on GitHub."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://prasu.xyz/" />
    <meta
      property="og:title"
      content="Prasu Labs - Community-Driven Open Source Projects"
    />
    <meta
      property="og:description"
      content="Join Prasu Labs in building innovative open-source solutions for real-world needs. Explore projects like Jeevan Daan and Lekhak, and become part of a vibrant developer community."
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://prasu.xyz/" />
    <meta
      property="twitter:title"
      content="Prasu Labs - Community-Driven Open Source Projects"
    />
    <meta
      property="twitter:description"
      content="Prasu Labs is a collaborative open-source community. Join us in developing impactful projects like Jeevan Daan and Lekhak. Explore, contribute, and make a difference."
    />

    <!-- Additional SEO Tags -->
    <meta
      name="keywords"
      content="Prasu Labs, open source, GitHub projects, Jeevan Daan, Lekhak, software development, community-driven projects, open-source software, collaborative development"
    />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Prasu Labs" />
  </head>
  <body>
    <div class="min-h-screen bg-white">
      <Header data={{ active: currentUrl }} client:load />
      <main class="pt-16">
        <slot />
      </main>
    </div>
  </body>
</html>
