---
import Header, { TopNotice } from "@/components/react/Header";
import ComingSoon from "@/components/react/ComingSoon";
const { title } = Astro.props;

const currentUrl = Astro.url.pathname;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>prasuco - {title}</title>
  </head>
  <body>
    <TopNotice />

    <Header data={{ active: currentUrl }} client:load />

    <ComingSoon />

    <slot />
  </body>
</html>
